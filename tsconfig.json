{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "watch": false,
        "allowJs": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include":[
        "src/**/*.ts"
    ]
}